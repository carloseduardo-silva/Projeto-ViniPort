    <link rel="stylesheet" href="/stylesheets/contact.css">

    <title>ViniPort - Contato</title>
</head>
<body>
   
    <%-include('inc/nav')-%>

    <header>

        <h1>Fale Conosco</h1>
        <p>Sua mensagem é muito importante para nós.</p>

    </header>

    <section id="content">

        <div id="form-content">

            <h2> Deixe sua Mensagem</h2>

         <%- include('inc/validation') -%>

            <form method="POST" action="/contact">

                <div class="row row1-form">

                    <input placeholder="Nome Completo" name="name" id="name" type="text">

                    <input placeholder="E-mail" name="email" id="email" type="text">
                </div>

                
                <div class="row row2-form">

                    <input placeholder="Telefone" name="tel" id="tel" type="tel">

                    <input placeholder="Empresa" name="empresa" id="empresa" type="text">
                </div>

              

                <textarea placeholder="Deixe sua Mensagem..." name="mensagem" id="mensagem" cols="30" rows="10"></textarea>

               <button type="submit">ENVIAR MENSAGEM</button>

            </form>

        </div>

        <div id="contact">
            <h2> Nosso escritório</h2>

            <div class="row-contact"> 
                <span class="material-symbols-outlined">call</span>
                <p>(11) 94764-9052 </p>
            </div>

            <div class="row-contact"> 

                <span class="material-symbols-outlined">mail</span>
                <p> viniportservicos@hotmail.com </p></div>

            <div class="row-contact"> 

                <span class="material-symbols-outlined">location_on </span>
                <p> Rua Topázio, 195 - Diadema - SP </p></div>

        </div>

    </section>


    <%-include('inc/footer')-%>

    

</body>

<script src="/javascripts/contactController.js"></script>
